@model RegisterViewModel

    <div class="card p-5 shadow m-3">

        <form asp-controller="Auth" asp-action="Register" method="post">
            <div class="card-title text-center">
                <h2>Cadastrar Usuário</h2>
            </div>

            <div class="card-body">

                <input type="hidden" asp-for="ReturnUrl" />

                <div class="form-group">
                    <label>Username</label>
                    <input asp-for="UserName" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input asp-for="Password" class="form-control" />
                </div>
            </div>

            <div class="text-center">
                <input type="submit" value="Cadastrar" class="w-100 btn btn-primary" />
                <a asp-controller="Auth" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-link">Realizar Login</a>
            </div>
        </form>
    </div>